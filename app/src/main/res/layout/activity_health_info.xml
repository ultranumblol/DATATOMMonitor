<?xml version="1.0" encoding="utf-8"?>
<datatom.com.datatommonitor.View.MyScrollview xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="14dp"
    tools:context="datatom.com.datatommonitor.Activity.HealthInfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            >
            <FrameLayout
                android:layout_width="match_parent"

                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/titlepic"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="2条错误"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </FrameLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="位置"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="详情"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />


            </LinearLayout>


         <!--   <com.jude.easyrecyclerview.EasyRecyclerView
                android:layout_width="match_parent"
                android:id="@+id/id_error_rv"

                android:layout_height="match_parent"></com.jude.easyrecyclerview.EasyRecyclerView>
-->
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/id_error_rv"

                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"

                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/titlepic"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="2条告警"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="位置"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="详情"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />


            </LinearLayout>
<!--
            <com.jude.easyrecyclerview.EasyRecyclerView
                android:layout_width="match_parent"
                android:id="@+id/id_warning_rv"
                android:layout_height="match_parent"></com.jude.easyrecyclerview.EasyRecyclerView>-->
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/id_warning_rv"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>



        </LinearLayout>

    </LinearLayout>



</datatom.com.datatommonitor.View.MyScrollview>
